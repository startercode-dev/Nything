<main class="main container">
  <section class="section-account-settings">
    <form class="submit-form form--forgotPassword main-boxes">
      <h2 class="form-header">Forgot Password</h2>
      <p class="form-secondary">
        Provide us an email to send you a reset password link
      </p>
      <div class="input-box">
        <input
          id="email"
          type="text"
          name="email"
          placeholder="Email Address"
          class="input"
        />
      </div>
      <button type="submit" class="main-button btn">Email Link</button>
    </form>
  </section>
</main>
